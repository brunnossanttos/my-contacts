  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "strict": true,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "types": [
      "node",
      "jest"
    ]
  },
  "include": [
    "src"
  ]
}